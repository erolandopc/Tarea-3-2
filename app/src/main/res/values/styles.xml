<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTheme" parent="android:Widget.EditText">
        <item name="android:textSize">@dimen/EditThemeTextSize</item>
    </style>


    <style name="ActTitulo" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/EditThemeTextSize</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">@dimen/ActTituloMarginBottom</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ViewTheme" parent="android:Widget.TextView">
        <item name="android:layout_margin">@dimen/ViewThemeMarginBottom</item>
    </style>

</resources>
